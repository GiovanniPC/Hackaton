    <div class="col-9 col-sm-10 col-md-10 col-lg-10 col-xl-10 pt-2">
      <div class="d-flex justify-content-between">
          <h1 class="TEXTO-MENOR-Raleway-18pt font-weight-bold text-uppercase text-center pb-2">Registered</h1>
      </div>
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
          <div class="d-flex justify-content-end">
            <h2 class="MENU-Ubuntu-14pt">Number of Registered: {{countF}} </h2>
          </div>
            <div class="d-flex flex-row">
            {{#each users}}
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title"><span class="font-weight-bold">Name:</span> {{this.name}}</h5>
                <p class="card-text"><span class="font-weight-bold">Email:</span> {{this.email}}<br/>
                <span class="font-weight-bold">BirthDay:</span> {{this.date}}<br/>
                <span class="font-weight-bold">Neighbourhood:</span> {{this.bairo}}<br/>
                <span class="font-weight-bold">City:</span> {{this.city}}<br/>
                <span class="font-weight-bold">Cupom:</span> {{this.status}}</p>
              </div>
            </div>
            {{/each}} 
            </div>
        </div>
        <div class="tab-pane fade text-center" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
          <div class="d-flex justify-content-around">
            <p>Number of Registered with Pending Cupom: {{countP}} </p>
          </div>
            {{#each userPending}}
          <ul class="list-group">
              <li class="list-group-item"> 
                Name: {{this.name}} <br>
                Email: {{this.email}} <br>
                BirthDay: {{this.date}} <br>
                Neighbourhood: {{this.bairo}} <br>
                City: {{this.city}} <br>
                Cupom: {{this.status}} <br>
              </li>
          </ul>
            {{/each}} 
        </div>
        <div class="tab-pane fade text-center" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
          <div class="d-flex justify-content-around">
            <p>Number of Registered with Active Cupom: {{countA}} </p>
          </div>
            
          {{#each userActive}}
          <ul class="list-group">
              <li class="list-group-item"> 
                Name: {{this.name}} <br>
                Email: {{this.email}} <br>
                BirthDay: {{this.date}} <br>
                Neighbourhood: {{this.bairo}} <br>
                City: {{this.city}} <br>
                Cupom: {{this.status}} <br>
              </li>
          </ul>
            {{/each}} 
        </div>
