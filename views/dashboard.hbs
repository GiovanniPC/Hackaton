    <div class="col-3 col-sm-2 col-md-2 col-lg-2 col-xl-2 pt-2">
      <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <a class="nav-link d-inline-block menu rounded-pill MENU-Ubuntu-14pt pt-3 pb-3 pl-3 pr-3" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">All</a>
        <a class="nav-link d-inline-block menu rounded-pill MENU-Ubuntu-14pt pt-3 pb-3 pl-3 pr-3" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Pendings</a>
        <a class="nav-link d-inline-block menu rounded-pill MENU-Ubuntu-14pt pt-3 pb-3 pl-3 pr-3" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Ativos</a>
