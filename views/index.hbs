              <input id="email" class="input-form form-control" type="text" name="email" placeholder="me@domain.com">
            </div>
            <div class="sign-input form-group">
              <label for="birthDay" class="TEXTO-MENOR-Raleway-18pt text-uppercase font-weight-bold"> Data de Nascimento</label>
              <input id="birthDay" class="input-form form-control" type="date" name="birthDay">
            </div>
            <div class="sign-input form-group">
              <label for="city" class="TEXTO-MENOR-Raleway-18pt text-uppercase font-weight-bold">Cidade</label>
              <input id="city" class="input-form form-control" type="text" name="city" placeholder="Cidade">
            </div>
            <div class="sign-input form-group">
              <label for="bairro" class="TEXTO-MENOR-Raleway-18pt text-uppercase font-weight-bold">Bairro</label>
              <input id="bairro" class="input-form form-control" type="text" name="bairro" placeholder="Bairro">
            </div>
            {{#if message}}
            <div class="alert alert-danger d-inline-flex justify-content-center p-2 text-center mb-2 rounded">
              {{ message }}
            </div>
            {{/if}}
            <div class="form-group">
